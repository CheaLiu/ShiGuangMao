<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qi.commonview.view.title.TitleView
        android:id="@+id/mTitleView"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        tl:titleColor="@color/font_title_dark"
        tl:titleText="@string/titleGrab">

        <TextView
            android:id="@+id/mLocationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:drawableEnd="@drawable/route"
            android:drawablePadding="@dimen/yPaddingSmall"
            android:padding="@dimen/common_padding"
            android:text="上海" />
    </com.qi.commonview.view.title.TitleView>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/mSlidingTabLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/common_white"
        tl:tl_indicator_color="@color/common_red"
        tl:tl_indicator_height="1.5dp"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_padding="22dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/common_red"
        tl:tl_textUnselectColor="@color/font_title_default"
        tl:tl_underline_color="#1AFFFFFF"
        tl:tl_underline_height="1dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>